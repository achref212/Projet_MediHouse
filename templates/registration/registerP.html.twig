{% extends 'log.html.twig' %}

{% block title %}Register
{% endblock %}

{% block body %}
	<div class="content">
		<div class="container-fluid">

			<div class="row">
				<div
					class="col-md-8 offset-md-2">

					<!-- Register Content -->
					<div class="account-content">


						<div class="row align-items-center justify-content-center">
							<div class="col-md-7 col-lg-6 login-left">
								<img src="{{asset ('assets1/img/login-banner.png')}} " class="img-fluid" alt="Doccure Register">
							</div>


							<div class="col-md-12 col-lg-6 login-right">
								<div class="login-header">
									<h3>Patient Register
									</h3>
								</div>
								{{ form_start(registrationForm,{'attr': {'novalidate':'novalidate'}}) }}
								<!-- Register Form -->
								<div class="form-group row">
									<label class="col-lg-3 col-form-label">{{ form_label(registrationForm.email,"email")  }}</label>
									<div class="col-lg-9">
										{{ form_widget(registrationForm.email, {'attr': {'class': 'form-control'}}) }}
										{{ form_errors (registrationForm.email) }}
									</div>
								</div>


								<div class="form-group row">
									<label class="col-lg-3 col-form-label">{{ form_label(registrationForm.imgFile,"imgFile") }}</label>
									<div class="col-lg-9">
										{{ form_widget(registrationForm.imgFile, {'attr': {'class': 'form-control-file'}}) }}
									</div>
								</div>

								<div class="form-group row">
									<label class="col-lg-3 col-form-label">{{ form_label(registrationForm.nom,"nom")  }}</label>
									<div class="col-lg-9">
										{{ form_widget(registrationForm.nom, {'attr': {'class': 'form-control'}}) }}
										{{ form_errors(registrationForm.nom) }}
									</div>
								</div>
								<div class="form-group row">

									<label class="col-lg-3 col-form-label" for="{{ registrationForm.genre.vars.id }}">{{ registrationForm.genre.vars.label}}</label>
									<div class="col-lg-9">
										{{ form_widget(registrationForm.genre, { 'attr': {'class': 'form-check form-check-inline'} }) }}
									</div>
								</div>
								<div class="form-group row">
									<label class="col-lg-3 col-form-label">{{ form_label(registrationForm.prenom,"prenom")  }}</label>
									<div class="col-lg-9">
										{{ form_widget(registrationForm.prenom, {'attr': {'class': 'form-control'}}) }}
										{{ form_errors(registrationForm.prenom) }}
									</div>
								</div>
								<div class="form-group row">
									<label class="col-lg-3 col-form-label">{{ form_label(registrationForm.telephone,"telephone")  }}</label>
									<div class="col-lg-9">
										{{ form_widget(registrationForm.telephone, {'attr': {'class': 'form-control'}}) }}
										{{ form_errors(registrationForm.telephone) }}
									</div>
								</div>
								<div class="form-group row">
									<label class="col-lg-3 col-form-label">{{ form_label(registrationForm.adresse,"adresse")  }}</label>
									<div class="col-lg-9">
										{{ form_widget(registrationForm.adresse, {'attr': {'class': 'form-control'}}) }}
										{{ form_errors(registrationForm.adresse) }}
									</div>
								</div>
								<div class="form-group row">
									<label class="col-lg-3 col-form-label">{{ form_label(registrationForm.date_naissance)  }}</label>
									<div class="col-lg-9">
										{{ form_widget(registrationForm.date_naissance, {'attr': {'class':'form-control'} }) }}
										{{ form_errors(registrationForm.date_naissance) }}
									</div>
								</div>
								<div class="form-group row">
									<label class="col-lg-3 col-form-label">{{ form_label(registrationForm.password.first, 'Password') }}</label>
									<div class="col-lg-9">
										{{ form_widget(registrationForm.password.first, {'attr': {'class': 'form-control'}}) }}
									</div>
								</div>
								<div class="form-group row">
									<label class="col-lg-3 col-form-label">{{ form_label(registrationForm.password.second, 'Repeat') }}</label>
									<div class="col-lg-9">
										{{ form_widget(registrationForm.password.second, {'attr': {'class': 'form-control'}}) }}
									</div>
								</div>
								<div class="form-group row">

									<div class="col-lg-9">

										{{ form_errors(registrationForm.password, {'attr': {'class': 'form-control'}}) }}
									</div>
								</div>

								<div class="form-group form-focus">

									<label class="focus-label"></label>
									{{ form_row(registrationForm.agreeTerms) }}
								</div>
								{{ form_widget(registrationForm.Save, {'attr': {'class':'btn btn-primary w-100'} })}}
								<div class="col-12">
									<h5>Already have an account?
										<a href="{{path ('app_login')}}">Log in</a>
									</h5>
								</div>

								{{ form_end(registrationForm) }}
							</div>
						</div>
					</div>
					<!-- /Register Content -->

				</div>
			</div>

		</div>

	</div>


{% endblock %}
