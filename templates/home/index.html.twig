{% extends 'base1.html.twig' %}


{% block Usermenu %}
	<li class="nav-item dropdown has-arrow logged-item">
		<a href="#" class="dropdown-toggle nav-link" data-toggle="dropdown">
			<span class="user-img">
				<img class="rounded-circle" src="{{asset ('assets1/img/patients/patient.jpg')}} " width="31" alt="Ryan Taylor">
			</span>
			{% if app.user != null %}
				<span class="user-text">
					<h6>{{app.user.username}}</h6>

				</span>
			{% endif %}
		</a>
		<div class="dropdown-menu dropdown-menu-right">
			<div class="user-header">
				<div class="avatar avatar-sm">
					<img src="{{asset ('assets1/img/patients/patient.jpg')}}" alt="User Image" class="avatar-img rounded-circle">
				</div>
				<div class="user-text">
					{% if app.user != null %}
						<span class="user-text">
							<h6>{{app.user.username}}</h6>

						</span>
					{% endif %}

				</div>
			</div>
			<a class="dropdown-item" href="patient-dashboard.html">Dashboard</a>
			<a class="dropdown-item" href="profile-settings.html">Profile Settings</a>
			<a class="dropdown-item" href=" {{path ('app_logout')}}">Se d√©connecter</a>
		</div>
	</li>
{% endblock %}
{% block body %}

	<section class="section section-search">
		<div class="container-fluid">
			<div class="banner-wrapper">
				<div class="banner-header text-center">
					<h1>Search Doctor, Make an Appointment</h1>
					<p>Discover the best doctors, clinic & hospital the city nearest to you.</p>
				</div>

				<!-- Search -->
				<div class="search-box">
					<form action="templateshub.net">
						<div class="form-group search-location">
							<input type="text" class="form-control" placeholder="Search Location">
							<span class="form-text">Based on your Location</span>
						</div>
						<div class="form-group search-info">
							<input type="text" class="form-control" placeholder="Search Doctors, Clinics, Hospitals, Diseases Etc">
							<span class="form-text">Ex : Dental or Sugar Check up etc</span>
						</div>
						<button type="submit" class="btn btn-primary search-btn">
							<i class="fas fa-search"></i>
							<span>Search</span>
						</button>
					</form>
				</div>
				<!-- /Search -->

			</div>
		</div>
	</section>


{% endblock %}
