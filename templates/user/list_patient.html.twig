{% block body %}
	<h1>Patient
	</h1>

	<table class="table">
		<thead>
			<tr>

				<th>profilepicture</th>
				<th>Email</th>
				<th>Nom</th>
				<th>Prenom</th>
				<th>Genre</th>
				<th>Telephone</th>
				<th>adresse</th>
				<th>activete</th>
			</tr>
		</thead>
		<tbody>
			{% if patients is not empty %}

				{% for patient in patients %}
					<tr>
						<td>{{ patient.profilepicture }}</td>
						<td>{{ patient.email }}</td>
						<td>{{ patient.nom }}</td>
						<td>{{ patient.prenom }}</td>
						<td>{{ patient.genre }}</td>
						<td>{{ patient.telephone }}</td>
						<td>{{ patient.adresse }}</td>
						<td>{{ patient.activate }}</td>


