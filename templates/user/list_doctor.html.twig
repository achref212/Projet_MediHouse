{% block body %}
	<h1>Doctor
	</h1>

	<table class="table">
		<thead>
			<tr>

				<th>profilepicture</th>
				<th>Email</th>
				<th>Nom</th>
				<th>Prenom</th>
				<th>Genre</th>
				<th>Telephone</th>
				<th>adresse</th>
				<th>activete</th>
				<th>Action</th>
			</tr>
		</thead>
		<tbody>
			{% if doctors is not empty %}

				{% for doctor in doctors %}
					<tr>
						<td>{{ doctor.profilepicture }}</td>
						<td>{{ doctor.email }}</td>
						<td>{{ doctor.nom }}</td>
						<td>{{ doctor.prenom }}</td>
						<td>{{ doctor.genre }}</td>
						<td>{{ doctor.telephone }}</td>
						<td>{{ doctor.adresse }}</td>
						<td>{{ doctor.activate }}</td>
						<td>
							<div class="col-6 col-sm-4 col-md-2 col-xl mb-3 mb-xl-0">
								<button type="button" class="btn btn-block btn-outline-danger active">
									<a class="apt-btn" href="{{ path('ban', {'id': doctor.id}) }}">Ban</a>
								</button>
								<button type="button" class="btn btn-block btn-outline-info active">
									<a class="apt-btn" href="{{ path('activate', {'id': doctor.id}) }}">activate</a>
								</button>
							</div>
						</td>


					</tr>
				{% endfor %}
			{% else %}
				<p>Aucun utilisateur trouv√©.</p>
			{% endif %}
		</tbody>
	</table>


{% endblock %}
