{% extends 'log.html.twig' %}

{% block title %}Log in!
{% endblock %}

{% block body %}

	<div class="account-content">
		<div class="row align-items-center justify-content-center">
			<div class="col-md-7 col-lg-6 login-left">
				<img src="{{asset ('assets1/img/login-banner.png')}} " class="img-fluid" alt="Doccure Login">
			</div>
			<div class="col-md-12 col-lg-6 login-right">
				<div class="login-header">
					<h3>Login
						<span>Medihouse</span>
					</h3>
				</div>

				<form method="post">
					{% if error %}
						<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
					{% endif %}

					{% if app.user %}
						<div class="mb-3">
							You are logged in as
							{{ app.user.userIdentifier }},
							<a href="{{ path('app_logout') }}">Logout</a>
						</div>
					{% endif %}

					<div class="form-group form-focus">
						<label class="focus-label">Email</label>
						<input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control floating" autocomplete="email" required autofocus>
					</div>
					<div class="form-group form-focus">

						<label class="focus-label">mot de passe</label>
						<input type="password" name="password" id="inputPassword" class="form-control floating" autocomplete="current-password" required>
					</div>
					<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

					<button class="btn btn-primary btn-block btn-lg login-btn" type="submit">
						connexion
					</button>
					<div class="text-center dont-have">Vous n'avez pas de compteÂ ?
						<a href="{{path ('app_registration')}}">Enregistrer</a>
					</div>
					<div class="text-center dont-have">
						<a href="{{path ('forgot')}}">Forgot password</a>
					</div>
				</form>
			</div>
		</div>
	</div>


{% endblock %}
