{% extends 'log.html.twig' %}

{% block title %}Log in!
{% endblock %}

{% block body %}

	<div class="account-content">
		<div class="row align-items-center justify-content-center">
			<div class="col-md-7 col-lg-6 login-left">
				<img src="{{asset ('assets1/img/login-banner.png')}} " class="img-fluid" alt="Doccure Login">
			</div>
			<div class="card mb-3">

				<div class="card-body">

					<div class="pt-4 pb-2">
						<h5 class="card-title text-center pb-0 fs-4">Reset Password</h5>
					</div>


					<form method="post">
						<div class="col-12">
							<label for="yourEmail" class="form-label">New Password</label>
							<input type="password" name="password" id="inputPass" class="form-control" placeholder="new pass" required/>
							<input type="hidden" name="token" value={token} ">
							<div class="invalid-feedback">Please enter a valid password!</div>
						</div>
						<div class="col-12">
							<button class="btn btn-primary w-100" type="submit">Send</button>
						</div>
					</form>
				</div>
			</div>

		{% endblock %}
