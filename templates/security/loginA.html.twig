{% extends 'log1.html.twig' %}

{% block title %}Log in!
{% endblock %}

{% block body %}
	<div class="main-wrapper login-body">
		<div class="login-wrapper">
			<div class="container"></div>
			<div class="loginbox">
				<div class="login-left">
					<img class="img-fluid" src="{{asset ('assets/img/footer-logo1.png')}} " alt="Logo">
				</div>
				<div class="login-right">
					<div class="login-right-wrap">
						<h1>Login</h1>
						<p class="account-subtitle">Access to our dashboard</p>

						<form method="post">
							{% if error %}
								<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
							{% endif %}

							{% if app.user %}
								<div class="mb-3">
									You are logged in as
									{{ app.user.userIdentifier }},
									<a href="{{ path('app_logout') }}">Logout</a>
								</div>
							{% endif %}

							<div class="form-group">
								<label class="focus-label">Email</label>
								<input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
							</div>
							<div class="form-group">

								<label class="focus-label">mot de passe</label>
								<input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
							</div>
							<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

							<button class="btn btn-primary btn-block" type="submit">
								connexion
							</button>
							<div class="text-center dont-have">Vous n'avez pas de compteÂ ?
								<a href="{{path ('app_registerA')}}">Enregistrer</a>
							</div>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>{% endblock %}
